<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mata Vaishno Devi Tour Ticketing</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background: url('bg.jpeg') no-repeat center center fixed;
            background-size: cover;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px; /* Added padding for smaller screens */
        }

        .container {
            text-align: center;
            background: rgba(255, 255, 255, 0.7); /* Lower opacity for transparency effect */
            padding: 40px;
            border-radius: 10px; /* Slightly larger border radius */
            box-shadow: 0 10px 30px rgba(0,0,0,0.25); /* Deeper shadow for a more elevated effect */
            max-width: 600px; /* Fixed max-width for better layout */
            width: 100%; /* Full width on smaller screens */
        }

        h1 {
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        .description {
            margin-bottom: 30px;
            font-size: 1.2em;
            color: #7f8c8d;
            line-height: 1.5; /* Improved line height for readability */
        }

        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap; /* Allow buttons to wrap on small screens */
        }

        .button, .button.secondary {
            display: inline-block;
            padding: 15px 30px;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            font-size: 1em;
            font-weight: bold; /* Bold text for buttons */
            border: none; /* Ensuring no border */
        }

        .button {
            background-color: #3498db; /* Primary color for the booking button */
        }

        .button:hover {
            background-color: #2980b9; /* Darker shade on hover */
        }

        .button.secondary {
            background-color: #e74c3c; /* Secondary color for admin login */
        }

        .button.secondary:hover {
            background-color: #c0392b; /* Darker shade on hover */
        }

        .station-board {
            margin-top: 20px; /* Space above the station updates section */
            padding: 20px;
            background: rgba(255, 255, 255, 0.8); /* Light background for visibility */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 5px 15px rgba(0,0,0,0.15); /* Subtle shadow */
        }

        .station-board h2 {
            margin-bottom: 10px; /* Space below the heading */
            font-size: 1.5em; /* Slightly larger for emphasis */
            color: #2c3e50;
        }

        .station-board p {
            font-size: 1em;
            color: #34495e; /* Darker text for better visibility */
            line-height: 1.5;
        }

        /* Style for the Check Booking form */
        .check-booking {
            margin-top: 30px; /* Space above the check booking section */
            padding: 20px;
            background: rgba(255, 255, 255, 0.9); /* Slightly more opaque for better visibility */
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        }

        .check-booking input {
            padding: 10px;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 60%; /* Width of the input box */
            margin-right: 10px; /* Space between input and button */
        }

        .check-booking button {
            padding: 10px 20px;
            font-size: 1em;
            border: none;
            border-radius: 5px;
            background-color: #2ecc71; /* Check button color */
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .check-booking button:hover {
            background-color: #27ae60; /* Darker on hover */
        }

        .hidden {
            display: none; /* Class to hide elements */
        }
    </style>
</head>
<body>
    <div class="container" id="clickable-area">
        <h1>Welcome to Mata Vaishno Devi Train Ticketing</h1>
        <p class="description">Effortlessly book your train tickets online. Enjoy a smooth and hassle-free experience.</p>
        <div class="button-container">
            <a href="/admin/login" class="button secondary" id="adminLoginBtn" class="hidden">Admin Login</a>
        </div>
        
        <!-- Check Booking Section -->
        <div class="check-booking">
            <h2>Check Booking Status</h2>
            <form action="/check-booking" method="POST">
                <input type="text" name="bookingId" placeholder="Enter Booking ID" required>
                <button type="submit">Check</button>
            </form>
        </div>

        <div class="station-board">
            <h2>Latest Station Updates</h2>
            <p>Check for the latest train arrivals and departures.</p>
            <!-- More details can be added here -->
        </div>
    </div>

    <script>
        let clickCount = 0; // Variable to hold the click count
        const adminLoginBtn = document.getElementById('adminLoginBtn'); // Get the admin login button

        // Function to handle the click event
        function handleClick() {
            clickCount++; // Increment the click count
            if (clickCount >= 5) { // Check if the count is 5 or more
                adminLoginBtn.classList.remove('hidden'); // Show the admin login button
            }
        }

        // Attach the click event listener to the whole container
        document.getElementById('clickable-area').addEventListener('click', handleClick);
    </script>
</body>
</html>