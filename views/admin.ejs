<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        h1 {
            margin-bottom: 20px;
            color: #2c3e50;
            font-size: 2.5em;
        }

        h2 {
            margin: 10px 0;
            color: #34495e;
            font-size: 1.5em;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            color: white;
            background-color: #3498db;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            margin: 20px 0;
            font-size: 1em;
        }

        .button:hover {
            background-color: #2980b9;
        }

        ul {
            list-style-type: none;
            padding: 0;
            width: 100%;
            max-width: 600px;
            margin-top: 20px;
        }

        li {
            background: white;
            margin-bottom: 10px;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        canvas {
            margin-top: 30px;
            border: 1px solid #ccc;
            width: 100%;
            max-width: 600px;
        }

        .stats-container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            width: 100%;
            max-width: 600px;
        }

        .flex-grid {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .stat {
            flex: 1;
            min-width: 120px;
            background: #ecf0f1;
            padding: 15px;
            border-radius: 5px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .stat span {
            display: block;
            font-size: 1.2em;
            color: #34495e;
        }
    </style>
</head>
<body>
    <h1>Admin Panel</h1>

    <div class="stats-container">
        <div class="flex-grid">
            <div class="stat">
                <span>Total Bookings:</span>
                <strong><%= totalBookings %></strong>
            </div>
            <div class="stat">
                <span>Today's Bookings:</span>
                <strong><%= todayBookings %></strong>
            </div>
            <div class="stat">
                <span>Total Collection:</span>
                <strong>₹<%= totalCollection %></strong>
            </div>
            <div class="stat">
                <span>Total Remaining Amount:</span>
                <strong>₹<%= totalRemaining %></strong>
            </div>
        </div>
    </div>

    <a href="/admin/download-excel" class="button">Download Excel</a>

    <h2>Bookings</h2>
    <ul>
        <% bookings.forEach(booking => { %>
            <li>
                <div>
                    <strong>ID:</strong> <%= booking.bookingId %> | 
                    <strong>Name:</strong> <%= booking.name %> | 
                    <strong>Remaining Amount:</strong> ₹<%= booking.remainingAmount %>
                </div>
                <div>
                    <form action="/admin/pay/<%= booking.bookingId %>" method="post" style="display:inline;">
                        <button type="submit" class="button" style="padding: 5px 10px;">Mark as Paid</button>
                    </form>
                    <a href="/slip/<%= booking.bookingId %>" class="button" style="padding: 5px 10px;">View Payment Slip</a>
                </div>
            </li>
        <% }) %>
    </ul>

    <script src="/chart.min.js"></script>
    <script>
        const ctx = document.getElementById('bookingChart').getContext('2d');

        fetch('/admin/bookings-data')
            .then(response => response.json())
            .then(data => {
                const labels = data.map(b => b.bookingId);
                const amounts = data.map(b => b.totalAmount);
                const remaining = data.map(b => b.remainingAmount);

                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Total Amount',
                            data: amounts,
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Remaining Amount',
                            data: remaining,
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            borderColor: 'rgba(255, 99, 132, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            });
    </script>
    <a href="/" class="button">Back to Home</a>
</body>
</html>